{
  "name": "@monorepo/root",
  "private": true,
  "useWorkspaces": true,
  "version": "independent",
  "devDependencies": {
    "eslint": "^7.22.0",
    "eslint-config-airbnb-typescript-prettier": "^4.1.0",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "yarn workspace @monorepo/graphql-server tsc -b --clean",
    "client": "yarn workspace @monorepo/next-app dev",
    "server": "yarn workspace @monorepo/graphql-server dev",
    "ui": "yarn workspace @monorepo/ui dev",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\" \"yarn ui\"",
    "clean": "rimraf **/dist && rimraf **/.next && rimraf **/node_modules"
  },
  "dependencies": {
    "concurrently": "^6.0.0"
  }
}
